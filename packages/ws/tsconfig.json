{
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "rootDir": "./src",
        "typeRoots": ["./src/types", "./node_modules/@types"],
        "resolveJsonModule": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "exclude": ["src/sandbox"],
    "include": ["src/**/*.ts"]
}
